<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<CodeBlocks_project_file>
	<FileVersion major="1" minor="6" />
	<Project>
		<Option title="voxels-0.6" />
		<Option pch_mode="2" />
		<Option compiler="gcc" />
		<Build>
			<Target title="Debug-Linux">
				<Option platforms="Unix;" />
				<Option output="voxels-debug" prefix_auto="1" extension_auto="1" />
				<Option object_output="obj/Debug/" />
				<Option type="1" />
				<Option compiler="gcc" />
				<Compiler>
					<Add option="-g" />
					<Add option="-DDEBUG_VERSION" />
				</Compiler>
			</Target>
			<Target title="Release-Linux">
				<Option platforms="Unix;" />
				<Option output="voxels" prefix_auto="1" extension_auto="1" />
				<Option object_output="obj/Release/" />
				<Option type="1" />
				<Option compiler="gcc" />
				<Compiler>
					<Add option="-O2" />
					<Add option="-DNDEBUG" />
				</Compiler>
				<Linker>
					<Add option="-s" />
				</Linker>
			</Target>
		</Build>
		<Compiler>
			<Add option="-march=pentium4" />
			<Add option="-std=c++11" />
			<Add option="-Wall" />
			<Add option="-mfpmath=sse" />
			<Add option="`sdl2-config --cflags`" />
		</Compiler>
		<Linker>
			<Add option="`sdl2-config --libs`" />
			<Add library="GL" />
			<Add library="png" />
			<Add library="ogg" />
			<Add library="vorbis" />
			<Add library="vorbisfile" />
		</Linker>
		<Extensions>
			<code_completion />
			<envvars />
			<debugger />
			<lib_finder disable_auto="1" />
		</Extensions>
	</Project>
</CodeBlocks_project_file>
